@using SimpleForumApp.ViewModels
@model LoginModel

<h1>Авторизация</h1>
<a asp-action="Register" asp-controller="Account" >Регистрация</a>
<form asp-controller="Account" asp-action="Login" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"> </div>
    <div>
        <label asp-for="Email">Введите Email </label>
        <input type="text" asp-for="Email" />
        <span asp-validation-for="Email" />
    </div>
    <div>
        <label asp-for="Password">Введите пароль </label>
        <input type="text" asp-for="Password" />
        <span asp-validation-for="Password" />
    </div>
    <div>
        <input type="submit" value="Войти" />
    </div>
</form>