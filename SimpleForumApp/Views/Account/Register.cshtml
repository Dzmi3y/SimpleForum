@using SimpleForumApp.ViewModels
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<form asp-controller="Account" asp-action="Register" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"> </div>
    <div>
        <label asp-for="Email">Введите Email </label>
        <input type="text" asp-for="Email" class="input-group-append" />
        <span asp-validation-for="Email" />
    </div>
    <div>
        <label asp-for="Password">Введите пароль </label>
        <input type="text" asp-for="Password" class="input-group-append" />
        <span asp-validation-for="Password" />
    </div>
    <div>
        <label asp-for="ConfirmPassword">Повторите пароль </label>
        <input type="text" asp-for="ConfirmPassword" class="input-group-append" />
        <span asp-validation-for="ConfirmPassword" />
    </div>
    <br />
    <div>
        <input type="submit" class="btn btn-secondary" value="Регистация" />
    </div>
</form>